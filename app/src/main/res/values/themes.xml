<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Calculatrice" parent="Theme.MaterialComponents.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/green</item>
        <item name="colorOnPrimary">@color/green</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/green</item>
        <item name="android:windowLightStatusBar">false</item>
    </style>

    <style name="spinnerDropDownItemStyle" parent="android:Widget.TextView.SpinnerItem">
        <item name="android:textColor">@color/black</item>
        <item name="android:background">@color/buttons_bg</item>
        <item name="android:padding">10dp</item>
        <item name="android:fontFamily">@font/montserrat_bold</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="menuItemTextStyle">
        <item name="android:textColor">@color/black</item>
        <item name="android:padding">10dp</item>
        <item name="android:layout_margin">2.5dp</item>
        <item name="android:fontFamily">@font/montserrat_bold</item>
        <item name="android:textSize">15sp</item>
    </style>
</resources>