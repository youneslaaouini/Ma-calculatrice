<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.LengthFragment"
    android:tag="fragment_length_tag"
    android:id="@+id/temperature_fragment">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingHorizontal="20dp"
            android:paddingTop="20dp"
            android:paddingBottom="25dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="10dp">

                <TextView
                    android:id="@+id/temperature_from_value"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textAlignment="textStart"
                    android:textColor="@color/black"
                    android:textSize="50sp"
                    android:textStyle="bold"
                    android:fontFamily="@font/montserrat_bold"/>

                <Spinner
                    android:id="@+id/temperature_from"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:spinnerMode="dropdown"
                    android:layout_gravity="left"
                    android:backgroundTint="@color/black"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="10dp">

                <TextView
                    android:id="@+id/temperature_to_value"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textAlignment="textStart"
                    android:textColor="@color/black"
                    android:textSize="50sp"
                    android:textStyle="bold"
                    android:fontFamily="@font/montserrat_bold"/>

                <Spinner
                    android:id="@+id/temperature_to"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:spinnerMode="dropdown"
                    android:fontFamily="@font/montserrat_bold"
                    android:layout_gravity="left"
                    android:backgroundTint="@color/black"/>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:background="@drawable/layout_radius"
            android:paddingHorizontal="5dp"
            android:paddingBottom="5dp"
            android:paddingTop="50dp"
            app:cornerRadius="50dp">

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:columnCount="3"
                android:rowCount="5">

                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"/>

                <Button
                    android:id="@+id/c"
                    android:text="C"
                    android:textColor="@color/green"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:fontFamily="@font/montserrat_bold"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"
                    android:layout_gravity="fill"
                    android:layout_margin="2.5dp"
                    android:gravity="center_vertical|center_horizontal"
                    android:backgroundTint="@color/button_bg"
                    app:cornerRadius="10dp"/>

                <ImageButton
                    android:id="@+id/erase"
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1"
                    android:layout_gravity="fill"
                    android:layout_margin="2.5dp"
                    android:backgroundTint="@color/button_bg"
                    android:contentDescription="erase"
                    android:gravity="center_vertical|center_horizontal"
                    android:src="@drawable/back"
                    app:cornerRadius="10dp"
                    app:tint="@color/red"/>

                <Button
                    android:id="@+id/number7"
                    android:text="7"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:fontFamily="@font/montserrat_bold"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"
                    android:layout_gravity="fill"
                    android:layout_margin="2.5dp"
                    android:gravity="center_vertical|center_horizontal"
                    android:backgroundTint="@color/button_bg"
                    app:cornerRadius="10dp"/>

                <Button
                    android:id="@+id/number8"
                    android:text="8"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:fontFamily="@font/montserrat_bold"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"
                    android:layout_gravity="fill"
                    android:layout_margin="2.5dp"
                    android:gravity="center_vertical|center_horizontal"
                    android:backgroundTint="@color/button_bg"
                    app:cornerRadius="10dp"/>

                <Button
                    android:id="@+id/number9"
                    android:text="9"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:fontFamily="@font/montserrat_bold"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"
                    android:layout_gravity="fill"
                    android:layout_margin="2.5dp"
                    android:gravity="center_vertical|center_horizontal"
                    android:backgroundTint="@color/button_bg"
                    app:cornerRadius="10dp"/>

                <Button
                    android:id="@+id/number4"
                    android:text="4"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:fontFamily="@font/montserrat_bold"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"
                    android:layout_gravity="fill"
                    android:layout_margin="2.5dp"
                    android:gravity="center_vertical|center_horizontal"
                    android:backgroundTint="@color/button_bg"
                    app:cornerRadius="10dp"/>

                <Button
                    android:id="@+id/number5"
                    android:text="5"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:fontFamily="@font/montserrat_bold"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"
                    android:layout_gravity="fill"
                    android:layout_margin="2.5dp"
                    android:gravity="center_vertical|center_horizontal"
                    android:backgroundTint="@color/button_bg"
                    app:cornerRadius="10dp"/>

                <Button
                    android:id="@+id/number6"
                    android:text="6"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:fontFamily="@font/montserrat_bold"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"
                    android:layout_gravity="fill"
                    android:layout_margin="2.5dp"
                    android:gravity="center_vertical|center_horizontal"
                    android:backgroundTint="@color/button_bg"
                    app:cornerRadius="10dp"/>

                <Button
                    android:id="@+id/number1"
                    android:text="1"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:fontFamily="@font/montserrat_bold"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"
                    android:layout_gravity="fill"
                    android:layout_margin="2.5dp"
                    android:gravity="center_vertical|center_horizontal"
                    android:backgroundTint="@color/button_bg"
                    app:cornerRadius="10dp"/>

                <Button
                    android:id="@+id/number2"
                    android:text="2"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:fontFamily="@font/montserrat_bold"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"
                    android:layout_gravity="fill"
                    android:layout_margin="2.5dp"
                    android:gravity="center_vertical|center_horizontal"
                    android:backgroundTint="@color/button_bg"
                    app:cornerRadius="10dp"/>

                <Button
                    android:id="@+id/number3"
                    android:text="3"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:fontFamily="@font/montserrat_bold"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"
                    android:layout_gravity="fill"
                    android:layout_margin="2.5dp"
                    android:gravity="center_vertical|center_horizontal"
                    android:backgroundTint="@color/button_bg"
                    app:cornerRadius="10dp"/>

                <Button
                    android:id="@+id/plusMinus"
                    android:text="+/-"
                    android:textColor="@color/red"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:fontFamily="@font/montserrat_bold"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"
                    android:layout_gravity="fill"
                    android:layout_margin="2.5dp"
                    android:gravity="center_vertical|center_horizontal"
                    android:backgroundTint="@color/button_bg"
                    app:cornerRadius="10dp"/>

                <Button
                    android:id="@+id/number0"
                    android:text="0"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:fontFamily="@font/montserrat_bold"
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1"
                    android:layout_gravity="fill"
                    android:layout_margin="2.5dp"
                    android:backgroundTint="@color/button_bg"
                    android:gravity="center_vertical|center_horizontal"
                    app:cornerRadius="10dp"
                    tools:ignore="DuplicateSpeakableTextCheck" />

                <Button
                    android:id="@+id/comma"
                    android:text="."
                    android:textColor="@color/black"
                    android:textSize="25sp"
                    android:textStyle="bold"
                    android:fontFamily="@font/montserrat_bold"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"
                    android:layout_gravity="fill"
                    android:layout_margin="2.5dp"
                    android:gravity="center_vertical|center_horizontal"
                    android:backgroundTint="@color/button_bg"
                    app:cornerRadius="10dp"/>

            </GridLayout>

        </LinearLayout>

    </LinearLayout>

</FrameLayout>